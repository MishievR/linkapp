
<div class="container-fluid">
  <div class="row">
  <div class="col-md-12">
    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="well well-white">

      <div class="form-group">
        <div class="control-label col-md-2 col-md-offset-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2 col-md-offset-2  ">
          <%= f.label :description %>
        </div>
        <div class="col-sm-4 col-md-4 ">
          <%= f.text_area :description, rows: 3, class: "form-control", placeholder: "Desctiption of article", autofocus: false %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-md-offset-4 col-md-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>


    <div class="col-md-5 col-md-offset-4">
      [ <%= link_to 'Cancel request and return to categories', categories_path %> ]
      </div>
    </div>

    </div>
  </div>
</div>
