<!DOCTYPE html>
<html lang="en">
  <head>
    <title>OverLink Categories</title>
  </head>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
      <div class="well well-white">
        <h1 align="center">List of all categories</h1>
      </div>
    </div>
  </div>
</div>




<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
      <div align="center">
        <%= will_paginate %></div>
          <ul class="listing">
            <div class="container-fluid">
              <div class="row">
                <% @categories.each do |category| %>
                  <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3">
                    <div class="well well-white">
                      <li class="article-title">
                          <h3 >
                          <%= link_to "#{category.name}", category_path(category),  class: "listing-title-text" %>
                        </h3>
                          <small>Contains <%= pluralize(category.group_ids.count, "group")%></small>

                          <h4><small>
                            <%= truncate(category.description, length: 100) %>
                          </small></h4>


                      </li>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </ul>
        <div align="center">
      <%= will_paginate %></div>
    </div>
  </div>
</div>
