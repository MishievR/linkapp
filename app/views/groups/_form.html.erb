<%= render 'shared/errors', obj: @group %>

<div class="container-fluid">
  <div class="row">
  <div class="col-md-12">
    <%= form_for(@group, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="well well-white">
      <div class="form-group">
        <div class="control-label col-md-2 col-md-offset-2">
          <%= f.label :title %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :title, class: "form-control", placeholder: "Group title (max 60 charachters)", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2 col-md-offset-2  ">
          <%= f.label :description %>
        </div>
        <div class="col-md-4 ">
          <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Desctiption of a group (max 350 charachters)", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2 col-md-offset-2  ">
          <%= f.label :categories_of_the_group %>
        </div>
        <div class="col-md-4 ">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <ul>
          <%= cb.label(class: "list-group-item list-group-item-on-bg checkbox-inline input_checkbox itme-list") {cb.check_box(class: "list-group-item checkbox ") + cb.text}  %>
        </ul>
        <% end %>
      </div>

      </div>





      <div class="form-group">
        <div class="col-md-offset-4 col-md-12">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>


    <div class="col-md-5 col-md-offset-4">
      [ <%= link_to 'Cancel request and return to groups', groups_path %> ]
      </div>
    </div>

    </div>
  </div>
</div>
